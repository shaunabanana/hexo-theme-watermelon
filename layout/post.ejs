<div class="page">
    <%- partial('_partial/post-nav') %>
    <div class="post header right">
        <h1><%- page.title %></h1>
        <span style="color: gray">
            SHAUNA, <%- date(page.date) %>. 
            <% if (page.updated.diff(page.date, 'days') > 1) { %>
                Last updated <%- date(page.updated) %>
            <% } %>
        </span>
    </div>

    <div class="rendered">
        <%- page.content %>
    </div>

    <%- partial('_partial/format-two-columns') %>

    <%- partial('_partial/footer') %>

</div>